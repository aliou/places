<!DOCTYPE html>
<html>
  <head>
    <title>
      Places <%= " | #{yield :page_title}" if content_for?(:page_title) %>
    </title>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class='container'>
      <div id='content' class='col-6 push-3'>
        <%= render 'header' %>
        <%= yield %>
      </div>
    </div>

    <%= javascript_include_tag 'application' %>
    <%= yield :scripts %>
  </body>
</html>
